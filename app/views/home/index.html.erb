                <i class="icon ion-cube"></i>
                <h4><%= t('.icon2') %></h4>
              </div>
              <div class="fact col-xs-6 col-md-3 col-lg-3">
                <i class="icon ion-monitor"></i>
                <h4><%= t('.icon3') %></h4>
              </div>
              <div class="fact col-xs-6 col-md-3 col-lg-3">
                <i class="icon ion-images"></i>
                <h4><%= t('.icon4') %></h4>
              </div>
              <div class="fact col-xs-6 col-md-3 col-lg-3">
                <i class="icon ion-home"></i>
                <h4><%= t('.icon1') %></h4>
              </div>
            </div>
            <div class="row text-center wow fadeInRight" data-wow-duration="1s" data-wow-delay="1s">
              <div class="fact col-xs-6 col-md-3 col-lg-3">
                <i class="icon ion-ios-camera"></i>
                <h4><%= t('.icon5') %></h4>
              </div>
              <div class="fact col-xs-6 col-md-3 col-lg-3">
                <i class="icon ion-settings"></i>
                <h4><%= t('.icon6') %></h4>
              </div>
              <div class="fact col-xs-6 col-md-3 col-lg-3">
                <i class="icon ion-load-a"></i>
                <h4><%= t('.icon7') %></h4>
              </div>
              <div class="fact col-xs-6 col-md-3 col-lg-3">
