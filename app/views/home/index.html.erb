									<h4><%= t('.architec') %></h4>
									<hr />
								</div>
							</div>	
						</div>
						<div class="col-md-4 col-sm-12 col-xs-12">
							<div class="box">
                <%= image_tag "digital.jpg" %>
								<div class="overlay">
									<h4><%= t('.signage') %></h4>
									<hr />
								</div>
							</div>
						</div>
						<div class="col-md-4 col-sm-12 col-xs-12">
							<div class="box">
                <%= image_tag "facade.jpg" %>
								<div class="overlay">
									<h4><%= t('.facade') %></h4>
									<hr />
								</div>
