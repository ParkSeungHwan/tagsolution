				</div>
			</div>
			<div id="purchase" class="section">
				<div class="section-content">
					<div class="container partner-table">
						<div class="col-md-12 col-sm-12 col-xs-12 text-center partner">
							<button class="btn btn-primary btn-lg"><%= t('.load_more') %></button>
						</div>
					</div>
				</div>
			</div>

			<!-- NEWSLETTER -->
			<div class="section newsletter">
				<div class="section-content">
					<div class="container">
						<div class="col-md-12 col-sm-12 col-xs-12 text-center">
							<h3 class="wow fadeInDown" data-wow-duration="1s"><%= t('.subscribe') %></h3>
						</div>
						<div class="col-md-12 col-sm-12 col-xs-12 text-center">
              <form action="/home/subscribe" method="post">
                <input type="email" class="wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0.5s" name="newsletter" placeholder="Enter your email..." />
                <br />
                <button onclick="alert('Complete')" type="submit" class="btn btn-primary btn-lg wow fadeInUp"  data-wow-duration="1s" data-wow-delay="0.5s" name="send"><%= t('.subscribe_btn') %></button>
              </form>
						</div>
					</div>
				</div>
			</div>

			<div class="section dark">
				<div class="section-content text-center">
					<h2 class="wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0.5s"><%= t('.sentence_we') %></h2>
